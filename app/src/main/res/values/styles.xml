<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.ButtonSend" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blueGray</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.ButtonStart" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/lightGreen</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.ButtonStop" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/mediumBrown</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
